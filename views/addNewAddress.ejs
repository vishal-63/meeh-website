    <!-- myaccount-section -->
    <section class="myaccount-section change-password">
      <div class="container">
        <h3 class="title pl-3 mb-4">Add New Address</h3>
        <form action="/profile/add-new-address" method="post" class="default-form col-lg-9 col-12 row mx-0 px-0">
          <div class="form-group col-md-6 mx-0">
            <label>First Name<span>*</span></label>
            <input type="text" name="first_name" class="form-control" required />
            <span class="text-danger first_name-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>Last Name <span>*</span></label>
            <input type="text" name="last_name" class="form-control" required />
            <span class="text-danger last_name-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>House No. <span>*</span></label>
            <input type="text" name="house_no" class="form-control" required />
            <span class="text-danger house_no-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>Street <span>*</span></label>
            <input type="text" name="street" class="form-control" required />
            <span class="text-danger street-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>Landmark <span class="optional">(optional)</span></label>
            <input type="text" name="landmark" class="form-control" />
            <span class="text-danger landmark-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>City <span>*</span></label>
            <input type="text" name="city" class="form-control" required />
            <span class="text-danger city-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>State <span>*</span></label>
            <input type="text" name="state" class="form-control" required />
            <span class="text-danger state-message"> </span>
          </div>
          <div class="form-group col-md-6 mx-0">
            <label>Pincode <span>*</span></label>
            <input type="text" name="pincode" class="form-control" required />
            <span class="text-danger pincode-message"> </span>
          </div>
          <div class="form-group col-sm-6 offset-sm-6 col-lg-3 offset-lg-9">
            <button class="theme-btn-three">Submit <i class="flaticon-right-arrow"></i></button>
          </div>
        </form>
      </div>
    </section>
<!-- myaccount-section end -->

